<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/latarbelakang"
    tools:ignore="MissingConstraints"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/latar"
        android:layout_width="325dp"
        android:layout_height="465dp"
        android:background="@drawable/background"
        android:shadowColor="#1D1C1C"
        android:shadowDx="100"
        android:shadowDy="50"
        android:shadowRadius="70"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="175dp" >

    </LinearLayout>


    <EditText
        android:id="@+id/t_NIK"
        android:layout_width="275dp"
        android:inputType="phone"
        android:layout_height="52dp"
        android:background="@drawable/t_filed"
        android:drawableStart="@drawable/profil"
        android:hint="Masukkan NIK"
        android:textColorHint="#645D5D"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="245dp" />

    <EditText
        android:id="@+id/t_telephone"
        android:layout_width="275dp"
        android:layout_height="52dp"
        android:background="@drawable/t_filed"
        android:drawableStart="@drawable/ic_telepone"
        android:drawablePadding="2dp"
        android:hint="Masukkan Nomor Telephone"
        android:textColorHint="#645D5D"
        android:textSize="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="312dp" />

    <EditText
        android:id="@+id/t_password"
        android:layout_width="275dp"
        android:layout_height="52dp"
        android:background="@drawable/t_filed"
        android:drawableStart="@drawable/ic_password"
        android:hint="Masukkan Password"
        android:inputType="textPassword"
        android:textColorHint="#645D5D"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="382dp" />

    <EditText
        android:id="@+id/t_konfirmasipassword"
        android:layout_width="275dp"
        android:layout_height="52dp"
        android:background="@drawable/t_filed"
        android:drawableStart="@drawable/ic_password"
        android:hint="Konfirmasi Password"
        android:inputType="textPassword"
        android:textColorHint="#645D5D"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="450dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="202dp" />

    <TextView
        android:id="@+id/t_sudahpunyaakun"
        android:layout_width="194dp"
        android:layout_height="22dp"
        android:text="Sudah Punya Akun?"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="594dp" />

    <TextView
        android:id="@+id/t_login"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="Log In"
        android:textColor="@color/bluefiled"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="594dp" />


    <TextView
        android:id="@+id/t_desadigital"
        android:layout_width="135dp"
        android:layout_height="31dp"
        android:text="Desa Digital"
        android:textColor="@color/white"
        android:textSize="24dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="76dp" />

    <TextView
        android:layout_width="97dp"
        android:layout_height="21dp"
        android:text="Desa Kalipait"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="120dp" />

    <Button
        android:id="@+id/b_masuk"
        android:layout_width="147dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/blue"
        android:text="Masuk"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="538dp" />


</androidx.constraintlayout.widget.ConstraintLayout>