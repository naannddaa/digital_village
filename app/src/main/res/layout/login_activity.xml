<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/latarbelakang"
    tools:ignore="MissingConstraints">

    <EditText
        android:id="@+id/latar"
        android:layout_width="317dp"
        android:layout_height="377dp"
        android:background="@drawable/background"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="203dp" />

    <EditText
        android:id="@+id/t_nik"
        android:layout_width="275dp"
        android:layout_height="52dp"
        android:background="@drawable/t_filed"
        android:drawableStart="@drawable/profil"
        android:hint="Masukkan NIK"
        android:inputType="phone"
        android:textColorHint="@color/grey"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="312dp"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/t_password"
        android:layout_width="275dp"
        android:layout_height="52dp"
        android:background="@drawable/t_filed"
        android:drawableStart="@drawable/ic_password"
        android:hint="Masukkan Password"
        android:inputType="textPassword"
        android:textColorHint="@color/grey"
        android:drawablePadding="2dp"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="387dp" />

    <Button
        android:id="@+id/b_login"
        android:layout_width="147dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/blue"
        android:text="Masuk"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="459dp"
        android:onClick="b_login"/>

    <TextView
        android:id="@+id/t_belumpunyaakun"
        android:layout_width="194dp"
        android:layout_height="22dp"
        android:text="Belum Punya Akun?"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="517dp" />

    <TextView
        android:id="@+id/t_registrasi"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="Registrasi"
        android:textColor="@color/bluefiled"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="517dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:textColor="@color/black"
        android:textSize="32dp"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="222dp" />

    <TextView
        android:id="@+id/t_desadigital"
        android:layout_width="135dp"
        android:layout_height="31dp"
        android:text="Desa Digital"
        android:textColor="@color/white"
        android:textSize="24dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="76dp" />

    <TextView
        android:layout_width="97dp"
        android:layout_height="21dp"
        android:text="Desa Kalipait"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="120dp" />

</androidx.constraintlayout.widget.ConstraintLayout>